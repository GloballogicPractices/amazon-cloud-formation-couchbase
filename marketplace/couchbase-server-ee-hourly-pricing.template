{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS Deployment for Couchbase Enterprise -- AWSMP::7ab3d84d-7989-48d7-8bca-19b9aa17b8fb::ac8a6d88-4b2f-4437-9d3d-4a0427d547e6",
  "Parameters": {
    "ServerInstanceCount": {
