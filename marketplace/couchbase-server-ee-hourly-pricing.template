      "us-west-1": { "AMI": "ami-03a69163" },
      "us-west-2": { "AMI": "ami-0a2bda72" },
      "ca-central-1": { "AMI": "ami-97e75ef3" },
      "eu-central-1": { "AMI": "ami-d5a116ba" },
      "eu-west-1": { "AMI": "ami-ab6cadd2" },
      "eu-west-2": { "AMI": "ami-e27f6c86" },
      "ap-southeast-1": { "AMI": "ami-53a3c830" },
      "ap-southeast-2": { "AMI": "ami-3baa4d59" },
      "ap-south-1": { "AMI": "ami-b0a1e6df" },
      "ap-northeast-1": { "AMI": "ami-905f9ff6" },
      "ap-northeast-2": { "AMI": "ami-6ded3603" },
      "sa-east-1": { "AMI": "ami-e29be98e" }
